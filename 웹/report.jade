extends layout

block content

    #main
        #header
            #logo
                h1
                    simplestyle

                if login == '로그인'
                    a(href='/login') #{login}
                    | |
                    a(href='/register') 회원가입
                    |     #{userid}
                    .slogan Ajou Used Book Auction System
                else if login == '로그아웃'
                    a(href='/logout') #{login}
                    | |
                    a(href='/register') 회원가입
                    |  #{userid}
                    .slogan Ajou Used Book Auction System


            #menubar
                ul#menu
                    // put class="current" in the li tag for the selected page - to highlight which page you're on
                    li
