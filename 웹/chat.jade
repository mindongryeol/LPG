extends chatLayout
-var login;
-var userid;
block content

    #main
        #header
            #logo
                h1
                    simplestyle
                if login =='로그인'
                    a(href='/login') #{login}
                    | |
                    a(href='/register') 회원가입
                    |     #{userid}
                    .slogan Ajou Used Book Auction System
                else if login=='로그아웃'
                    a(href='/logout') #{login}
                    | |
                    a(href='/register') 회원가입
                    |  #{userid}
                    .slogan Ajou Used Book Auction System


            #menubar
                ul#menu
                    // put class="current" in the li tag for the selected page - to highlight which page you're on
                    li
                        a(href='index.jade') Home

                    li
                        a(href='/topic') Auction

                    li.current
                        a(href='/chatlist') My Page

                    li
                        a(href='/Report') Report

                    li
                        a(href='contact.jade') Contact Us

        #site_content
            #sidebar_container
                img.paperclip(src='images/paperclip.png', alt='paperclip')

                .sidebar
                    // insert your sidebar items here
                    h3 Latest News

                    h4 What's the News?

                    h5 1st November 2013

                    p
                        | Put your latest news item here, or anything else you would like in the sidebar!
                        br
                        a(href='#') Read more

                img.paperclip(src='images/paperclip.png', alt='paperclip')

                .sidebar
                    h3 Newsletter

                    p
                        | If you would like to receive our newletter, please enter your email address and click 'Subscribe'.

                    form#subscribe(method='post', action='#')
                        p(style='padding: 0 0 9px 0;')
                            input.search(type='text', name='email_address', value='your email address', onclick="javascript: document.forms['subscribe'].email_address.value=''")

                        p
                            input.subscribe(name='subscribe', type='submit', value='Subscribe')

                img.paperclip(src='images/paperclip.png', alt='paperclip')

                .sidebar
                    h3 Latest Blog

                    h4 Website Goes Live

                    h5 1st November 2013

                    p
                        | We have just launched our new website. Take a look around, we'd love to know what you think.....
                        br
                        a(href='#') read more

            #content
                // insert the page content here
                h1#chatTitle
                    div#chatframe
                        div#chatwho
                        div#chatview
                        div#chatinput
                        form(onsubmit="return false;")
                            input#chatmsg
                            button(onclick='sendMessage()') Send
        #footer
            p
